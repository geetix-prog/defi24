---
interface Props {
    bgClass: string;
    colorClass: string;
    text: string;
}

const { bgClass, colorClass, text } = Astro.props;
---

<a 
    href="/connexion" 
    class={`inline-block ${bgClass} ${colorClass} px-6 sm:px-8 md:px-10 py-2 sm:py-2.5 md:py-3 rounded-full font-nohemi font-black text-base sm:text-lg shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] sm:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] hover:scale-105 active:scale-95 transition-transform duration-150 ease-in text-center`}
>
    {text}
</a>
