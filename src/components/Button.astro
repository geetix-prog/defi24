---
interface Props {
    bgClass: string;
    colorClass: string;
    text: string;
    page: string;
}

const { bgClass, colorClass, text, page } = Astro.props;
---

<a 
    href={`/${page}`} 
    class={`inline-block ${bgClass} ${colorClass} px-4 sm:px-6 md:px-8 lg:px-10 py-1.5 sm:py-2 md:py-2.5 lg:py-3 rounded-full font-nohemi font-black text-sm sm:text-base md:text-lg shadow-[0_0_0_2px_black,2px_2px_0px_1px_black] sm:shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] md:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] hover:scale-105 active:scale-95 transition-transform duration-150 ease-in text-center`}
>
    {text}
</a>
