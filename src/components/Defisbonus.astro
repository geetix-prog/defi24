---
import { getAllDefisbonus } from "../../backend/backend.mjs";

const defis = await getAllDefisbonus();

// Fonction pour déterminer la couleur du badge en fonction des points
function getBadgeColor(points: number) {
  if (points >= 100) return 'bg-purple-600';
  if (points >= 80) return 'bg-pink-500';
  return 'bg-primary';
}
---

<div class="flex justify-center w-full items-center p-2 sm:p-3 md:p-4">
  <div class="bg-white/95 rounded-2xl sm:rounded-3xl p-4 sm:p-5 md:p-6 lg:p-8 shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] sm:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] md:shadow-[0_0_0_3px_black,5px_5px_0px_2px_black] w-full max-w-full min-h-[400px] sm:min-h-[500px] flex flex-col">
    <div class="flex items-center gap-2 sm:gap-3 mb-4 sm:mb-6">
      <div class="w-8 h-8 sm:w-10 sm:h-10 bg-primary rounded-full flex items-center justify-center shadow-[0_0_0_2px_black]">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </div>
      <h2 class="font-oi text-2xl sm:text-3xl md:text-4xl lg:text-5xl uppercase text-black leading-tight">Défis Bonus</h2>
    </div>
    
    <div class="space-y-2 sm:space-y-3">
      {defis.map((defi) => {
        const badgeColor = getBadgeColor(defi.points);
        
        return (
          <div class="bg-white rounded-xl sm:rounded-2xl p-3 sm:p-4 md:p-5 shadow-[0_0_0_2px_black,2px_2px_0px_1px_black] sm:shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] flex items-start justify-between gap-3">
            <div class="flex-1 min-w-0">
              <h3 class="font-nohemi font-bold text-sm sm:text-base md:text-lg text-black mb-1 sm:mb-2">{defi.nom}</h3>
              <p class="font-nohemi text-xs sm:text-sm text-gray-600 leading-relaxed">{defi.description}</p>
            </div>
            
            <div class={`${badgeColor} text-white px-3 py-1.5 sm:px-4 sm:py-2 rounded-full font-nohemi font-bold text-xs sm:text-sm whitespace-nowrap flex-shrink-0 shadow-[0_0_0_2px_black]`}>
              +{defi.points}
            </div>
          </div>
        );
      })}
      
      {defis.length === 0 && (
        <div class="text-center py-6 sm:py-8">
          <p class="font-nohemi text-sm sm:text-base text-gray-500">Aucun défi bonus pour le moment</p>
        </div>
      )}
    </div>
  </div>
</div>
