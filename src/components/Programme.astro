---
import { getAllProgrammes } from "../../backend/backend.mjs";

const programmes = await getAllProgrammes();

// Fonction pour formater l'heure depuis une date ISO
function formatHeure(dateStr: string) {
  const date = new Date(dateStr);
  const hours = date.getUTCHours().toString().padStart(2, '0');
  const minutes = date.getUTCMinutes().toString().padStart(2, '0');
  return `${hours}:${minutes}`;
}

// Obtenir l'heure actuelle pour déterminer quel événement est en cours
const now = new Date();
const currentTime = now.getHours() * 60 + now.getMinutes();

// Fonction pour convertir une date ISO en minutes depuis minuit
function dateToMinutes(dateStr: string) {
  const date = new Date(dateStr);
  return date.getUTCHours() * 60 + date.getUTCMinutes();
}

// Vérifier si un événement est en cours
function isCurrentEvent(index: number) {
  if (index >= programmes.length) return false;
  
  const currentEventTime = dateToMinutes(programmes[index].heure);
  const nextEventTime = index < programmes.length - 1 
    ? dateToMinutes(programmes[index + 1].heure) 
    : currentEventTime + 60; // Si c'est le dernier, on suppose 1h de durée
  
  return currentTime >= currentEventTime && currentTime < nextEventTime;
}

const colors = [
  'bg-purple-500',
  'bg-gray-400',
  'bg-gray-400',
  'bg-gray-400',
  'bg-red-500',
  'bg-purple-500',
];
---

<div class="flex justify-center w-full items-center p-2 sm:p-3 md:p-4">
  <div class="bg-white/95 rounded-2xl sm:rounded-3xl p-4 sm:p-5 md:p-6 lg:p-8 shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] sm:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] md:shadow-[0_0_0_3px_black,5px_5px_0px_2px_black] w-full max-w-full xl:max-w-[550px] min-h-[500px] sm:min-h-[600px] flex flex-col">
    <div class="flex items-center gap-2 sm:gap-3 mb-4 sm:mb-6">
      <div class="w-8 h-8 sm:w-10 sm:h-10 bg-purple-500 rounded-full flex items-center justify-center shadow-[0_0_0_2px_black]">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
      <h2 class="font-oi text-2xl sm:text-3xl md:text-4xl lg:text-5xl uppercase text-black leading-tight">Programme</h2>
    </div>
    
    <div class="space-y-2 sm:space-y-3">
      {programmes.map((programme, index) => {
        const isCurrent = isCurrentEvent(index);
        const iconColor = colors[index % colors.length];
        
        return (
          <div class={`bg-white rounded-xl sm:rounded-2xl p-2.5 sm:p-3 md:p-4 shadow-[0_0_0_2px_black,2px_2px_0px_1px_black] sm:shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2 sm:gap-0 ${isCurrent ? 'ring-2 ring-orange-400' : ''}`}>
            <div class="flex items-center gap-2 sm:gap-3 md:gap-4 flex-1 w-full sm:w-auto">
              <div class="bg-white border-2 border-black rounded-full px-2.5 py-1 sm:px-3 sm:py-1.5 md:px-4 md:py-2 font-nohemi font-bold text-xs sm:text-sm whitespace-nowrap">
                {formatHeure(programme.heure)}
              </div>
              
              <div class={`w-8 h-8 sm:w-9 sm:h-9 md:w-10 md:h-10 ${iconColor} rounded-full shadow-[0_0_0_2px_black] flex-shrink-0 flex items-center justify-center`}>
                {programme.logo_url ? (
                  <img src={programme.logo_url} alt={programme.nom} class="w-5 h-5 sm:w-5.5 sm:h-5.5 md:w-6 md:h-6 object-contain" />
                ) : (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-4.5 sm:w-4.5 md:h-5 md:w-5 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                )}
              </div>
              
              <div class="flex-1 min-w-0">
                <h3 class="font-nohemi font-bold text-sm sm:text-base md:text-lg text-black truncate">{programme.nom}</h3>
              </div>
            </div>
            
            {isCurrent && (
              <div class="flex items-center gap-1.5 sm:gap-2 bg-orange-100 px-2.5 py-1 sm:px-3 sm:py-1.5 rounded-full border-2 border-orange-400 ml-10 sm:ml-0">
                <div class="w-1.5 h-1.5 sm:w-2 sm:h-2 bg-red-500 rounded-full animate-pulse"></div>
                <span class="font-nohemi font-bold text-[10px] sm:text-xs text-orange-600 whitespace-nowrap">En cours</span>
              </div>
            )}
          </div>
        );
      })}
      
      {programmes.length === 0 && (
        <div class="text-center py-6 sm:py-8">
          <p class="font-nohemi text-sm sm:text-base text-gray-500">Aucun programme pour le moment</p>
        </div>
      )}
    </div>
  </div>
</div>
