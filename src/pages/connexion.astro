---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="flex flex-col items-center justify-center min-h-screen px-4 py-10">
        <h1 class="text-white font-oi text-center text-5xl sm:text-6xl md:text-7xl lg:text-8xl mb-6 uppercase">
            Connexion
        </h1>
        
        <p class="text-white font-nohemi text-center text-base sm:text-lg max-w-lg mb-10">
            Connecte-toi à ton espace personnel pour accéder aux informations du Défi 24h, gérer ton inscription et rester informé des dernières actualités.
        </p>
        
        <div class="bg-white/90 w-full max-w-xl p-8 sm:p-10 rounded-3xl shadow-[0_0_0_3px_black,6px_6px_0px_2px_black]">
            <form id="loginForm" class="space-y-6">
                <div>
                    <label for="email" class="block font-nohemi text-black font-bold mb-2">Adresse email</label>
                    <input 
                        type="email" 
                        name="email" 
                        id="email" 
                        required 
                        placeholder="ton-email@example.com"
                        class="w-full px-5 py-3.5 border-3 border-black rounded-2xl font-nohemi text-base focus:outline-none focus:ring-3 focus:ring-primary transition-all"
                    />
                </div>
                
                <div>
                    <label for="password" class="block font-nohemi text-black font-bold mb-2">Mot de passe</label>
                    <div class="relative">
                        <input 
                            type="password" 
                            name="password" 
                            id="password" 
                            required 
                            placeholder="••••••••"
                            class="w-full px-5 py-3.5 border-3 border-black rounded-2xl font-nohemi text-base focus:outline-none focus:ring-3 focus:ring-primary transition-all pr-12"
                        />
                        <button 
                            type="button" 
                            id="togglePassword"
                            class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-600 hover:text-black transition"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </button>
                    </div>
                    <div class="text-center mt-2">
                        <a href="/mot-de-passe-oublie" class="text-primary font-nohemi text-sm font-bold hover:underline">
                            Mot de passe oublié ?
                        </a>
                    </div>
                </div>
                
                <button 
                    type="submit"
                    class="inline-block w-full bg-primary text-white px-6 sm:px-8 md:px-10 py-2 sm:py-2.5 md:py-3 rounded-full font-nohemi font-black text-base sm:text-lg shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] sm:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] hover:scale-105 active:scale-95 transition-transform duration-150 ease-in text-center"
                >
                    Se connecter
                </button>
                
                <div id="message" class="text-center font-nohemi font-bold"></div>
                
                <div class="flex items-center gap-4 my-6">
                    <div class="flex-1 h-0.5 bg-gray-300"></div>
                    <span class="text-gray-500 font-nohemi text-sm uppercase">ou</span>
                    <div class="flex-1 h-0.5 bg-gray-300"></div>
                </div>
                
                <a 
                    href="/inscription"
                    class="inline-block w-full bg-white text-primary px-6 sm:px-8 md:px-10 py-2 sm:py-2.5 md:py-3 rounded-full font-nohemi font-black text-base sm:text-lg shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] sm:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] hover:scale-105 active:scale-95 transition-transform duration-150 ease-in text-center"
                >
                    Créer un compte
                </a>
            </form>
        </div>
    </div>
</Layout>

<script>
    const form = document.getElementById('loginForm') as HTMLFormElement;
    const messageDiv = document.getElementById('message') as HTMLDivElement;
    const togglePasswordBtn = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password') as HTMLInputElement;

    togglePasswordBtn?.addEventListener('click', () => {
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
        } else {
            passwordInput.type = 'password';
        }
    });

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const emailInput = document.getElementById('email') as HTMLInputElement;
        
        const email = emailInput.value;
        const password = passwordInput.value;

        messageDiv.textContent = '';

        try {
            const response = await fetch('/apis/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, password })
            });

            const data = await response.json();

            if (response.ok) {
                localStorage.setItem('token', data.token);
                localStorage.setItem('user', JSON.stringify(data.user));
                messageDiv.textContent = 'Connexion réussie !';
                messageDiv.style.color = 'green';
                setTimeout(() => {
                    window.location.href = '/';
                }, 1000);
            } else {
                messageDiv.textContent = data.error || 'Erreur de connexion';
                messageDiv.style.color = 'red';
            }
        } catch (error) {
            messageDiv.textContent = 'Erreur de connexion au serveur';
            messageDiv.style.color = 'red';
        }
    });
</script>
</Layout>
