---
import Layout from "../layouts/Layout.astro"
import Nom from "../assets/nom.svg"
import Courrier from "../assets/courrier.svg"
import Objet from "../assets/objet.svg"
import Message from "../assets/message.svg"
import Envoyer from "../assets/envoyer.svg"
---

<Layout>
    <div class="flex mt-25 w-full justify-center">
        <div class="w-1/2">
            <h1
                class="text-white font-oi text-start text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl leading-tight sm:leading-tight md:leading-normal tracking-wide">
                Une question ?
            </h1>
            <hr class="w-1/4 my-5 border-pink border-2 rounded-3xl shadow-[0_0_0_3px_black,3px_3px_0px_2px_black]">
            <div class="flex flex-col space-y-5">
                <div
                    class="bg-white/90 w-full max-w-xl p-8 sm:p-10 rounded-3xl shadow-[0_0_0_3px_black,6px_6px_0px_2px_black]">
                    <p class="font-nohemi">Tu as une question sur le Défi 24h ? Une suggestion ? Un problème technique ?
                        N'hésite pas à nous envoyer un message, on te répondra dans les plus brefs délais !</p>
                </div>
                <div
                    class="bg-pink w-full max-w-xl sm:p-10 rounded-3xl shadow-[0_0_0_3px_black,6px_6px_0px_2px_black] flex gap-4">
                    <img src={Courrier.src} alt="mail icon"
                        class="p-4 shadow-[0_0_0_3px_black,6px_6px_0px_2px_black] bg-white rounded-full w-16" />
                    <div>
                        <p class="font-nohemi font-extralight text-white">Email</p>
                        <p class="font-nohemi font-black text-2xl text-white">contact@defi24h.fr</p>
                    </div>
                </div>
                <div
                    class="bg-green w-full max-w-xl p-8 sm:p-10 rounded-3xl shadow-[0_0_0_3px_black,6px_6px_0px_2px_black] flex gap-4">
                    <img src={Message.src} alt="mail icon"
                        class="p-4 shadow-[0_0_0_3px_black,6px_6px_0px_2px_black] bg-white rounded-full w-16" />
                    <div>
                        <p class="font-nohemi font-extralight text-white">Réponse sous</p>
                        <p class="font-nohemi font-black text-2xl text-white">24-48 heures</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white/90 w-1/2 max-w-xl p-8 sm:p-10 rounded-3xl shadow-[0_0_0_3px_black,6px_6px_0px_2px_black]">
            <form id="registerForm" class="space-y-5" action="https://formspree.io/f/xvgebwyw" method="POST">
                <div>
                    <div class="flex items-center gap-2">
                        <img src={Nom.src} alt="Nom" class="inline-block w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 mb-2" />
                        <label for="nom" class="block font-nohemi text-black font-black uppercase mb-2">Nom</label>
                    </div>
                    <input type="text" name="nom" id="nom" required placeholder="Entre ton nom"
                        class="w-full px-4 py-3 border-3 bg-white border-black rounded-2xl font-nohemi text-base focus:outline-none focus:ring-[3px] focus:ring-primary transition-all" />
                </div>
                <div>
                    <div class="flex items-center gap-2">
                        <img src={Courrier.src} alt="Mail"
                            class="inline-block w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 mb-2" />
                        <label for="email" class="block font-nohemi text-black font-black uppercase mb-2">Email</label>
                    </div>
                    <input type="email" name="email" id="email" required placeholder="Entre ton email"
                        class="w-full px-4 py-3 border-3 bg-white border-black rounded-2xl font-nohemi text-base focus:outline-none focus:ring-[3px] focus:ring-pink transition-all" />
                </div>
                <div>
                    <div class="flex items-center gap-2">
                        <img src={Objet.src} alt="Objet"
                            class="inline-block w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 mb-2" />
                        <label for="objet" class="block font-nohemi text-black font-black uppercase mb-2">Objet</label>
                    </div>
                    <input type="text" name="objet" id="objet" required placeholder="Entre l'objet de ton message"
                        class="w-full px-4 py-3 border-3 bg-white border-black rounded-2xl font-nohemi text-base focus:outline-none focus:ring-[3px] focus:ring-yellow transition-all" />
                </div>
                <div>
                    <div class="flex items-center gap-2">
                        <img src={Message.src} alt="Message"
                            class="inline-block w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 mb-2" />
                        <label for="message"
                            class="block font-nohemi text-black font-black uppercase mb-2">Message</label>
                    </div>
                    <textarea name="message" id="message" required placeholder="Entre ton message" rows="6"
                        class="w-full px-4 py-3 border-3 bg-white border-black rounded-2xl font-nohemi text-base focus:outline-none focus:ring-[3px] focus:ring-green transition-all min-h-[150px] resize-y"></textarea>
                </div>
                <button type="submit"
                    class="inline-block w-full bg-tertiary text-white px-6 sm:px-8 md:px-10 py-2 sm:py-2.5 md:py-3 rounded-full font-nohemi font-black text-base sm:text-lg shadow-[0_0_0_2px_black,3px_3px_0px_1px_black] sm:shadow-[0_0_0_3px_black,4px_4px_0px_2px_black] hover:scale-105 active:scale-95 transition-transform duration-150 ease-in text-center">
                    <img src={Envoyer.src} alt="Envoyer"
                        class="inline-block w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 mr-2 -mb-1" />
                    Envoyer
                </button>
            </form>
        </div>
    </div>
</Layout>